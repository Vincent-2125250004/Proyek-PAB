<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity_detail.Detail_Weapons"
    android:background="#393E41">



    <ImageView
        android:id="@+id/ImageWeapons"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/iconweapons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_marginTop="300dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/detail_shape_rectangle"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            >

            <TextView
                android:id="@+id/tv_nama_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_detail_weapons"
                android:text="Nama Weapons"
                android:textSize="16sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_nama_detail"
                android:text="Type"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="#B3000000"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/judulrarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_type_detail"
                android:text="Rarity :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/tv_rarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/judulrarity"
                app:layout_constraintTop_toTopOf="@id/tv_type_detail"
                android:layout_marginStart="10dp"
                android:text="Insert Rarity"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/judulbaseattack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/judulrarity"
                android:text="Base Attack :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_baseatk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/judulbaseattack"
                app:layout_constraintTop_toTopOf="@id/tv_rarity"
                android:layout_marginStart="10dp"
                android:text="Insert Base Attack"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/judulsubstats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/judulbaseattack"
                android:text="SubStats :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_substats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/judulsubstats"
                app:layout_constraintTop_toTopOf="@id/tv_baseatk"
                android:layout_marginStart="10dp"
                android:text="Insert SubStats"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/judulabillity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/judulsubstats"
                android:text="Passive Name :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_abillity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/judulabillity"
                app:layout_constraintTop_toTopOf="@id/tv_substats"
                android:layout_marginStart="10dp"
                android:text="Insert Abillity Name"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/judulabillitydesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/judulabillity"
                android:text="Passive Description :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_abillitydesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/judulabillitydesc"
                android:text="Insert Abillity Desc"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/judullocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_abillitydesc"
                android:text="Location :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/judullocation"
                app:layout_constraintTop_toBottomOf="@id/tv_abillitydesc"
                android:layout_marginStart="10dp"
                android:text="Insert Abillity Name"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/judulloreweapon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/judullocation"
                android:text="Lore :"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_lore_weapon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/judulloreweapon"
                android:text="Lore Here"
                android:textSize="10sp"
                android:fontFamily="@font/hoyo"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logopaimonopedia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/icon_detail_weapons"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>




    </androidx.cardview.widget.CardView>

    



</androidx.constraintlayout.widget.ConstraintLayout>