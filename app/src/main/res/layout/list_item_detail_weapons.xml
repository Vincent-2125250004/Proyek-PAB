<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/detail_shape_rectangle"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/kotak"
        android:layout_marginTop="70dp"
        >

        <TextView
            android:id="@+id/tv_nama_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Nama Weapons"
            android:textSize="16sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_type_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_nama_detail"
            android:text="Type"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="#B3000000"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/judulrarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_type_detail"
            android:text="Rarity :"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/judulrarity"
            app:layout_constraintTop_toTopOf="@id/tv_type_detail"
            android:layout_marginStart="10dp"
            android:text="Insert Rarity"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/judulbaseattack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/judulrarity"
            android:text="Base Attack :"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_baseatk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/judulbaseattack"
            app:layout_constraintTop_toTopOf="@id/tv_rarity"
            android:layout_marginStart="10dp"
            android:text="Insert Base Attack"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/judulsubstats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/judulbaseattack"
            android:text="SubStats :"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_substats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/judulsubstats"
            app:layout_constraintTop_toTopOf="@id/tv_baseatk"
            android:layout_marginStart="10dp"
            android:text="Insert SubStats"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/judulabillity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/judulsubstats"
            android:text="Passive Name :"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_abillity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/judulabillity"
            app:layout_constraintTop_toTopOf="@id/tv_substats"
            android:layout_marginStart="10dp"
            android:text="Insert Abillity Name"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/judulabillitydesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/judulabillity"
            android:text="Passive Name :"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_twosetbonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/judulabillitydesc"
            android:text="Insert Abillity Desc"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/judullocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_twosetbonus"
            android:text="Location :"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/judullocation"
            app:layout_constraintTop_toTopOf="@id/tv_twosetbonus"
            android:layout_marginStart="10dp"
            android:text="Insert Abillity Name"
            android:textSize="10sp"
            android:fontFamily="@font/hoyo"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:background="@drawable/detail_shape_oval"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logopaimonopedia"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:id="@+id/icon_detail_weapons"
        />





</androidx.cardview.widget.CardView>