<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity_detail.Detail_Characters"
    android:background="#393E41">

    <ImageView
        android:id="@+id/ImageChara"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/albedoportrait"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_marginTop="310dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/detail_shape_rectangle"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/kotak"
                android:layout_marginTop="70dp"
                >

                <TextView
                    android:id="@+id/tv_nama_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/icon_detail_character"
                    android:text="Nama Character"
                    android:textSize="16sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tv_title_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_nama_detail"
                    android:text="Title"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="#B3000000"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/judulElemen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_title_detail"
                    android:text="Vision :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/tv_elemen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulElemen"
                    app:layout_constraintTop_toTopOf="@id/tv_title_detail"
                    android:layout_marginStart="10dp"
                    android:text="Insert Vision"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/judulweapon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulElemen"
                    android:text="Weapon :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_weapon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulweapon"
                    app:layout_constraintTop_toBottomOf="@id/tv_elemen"
                    android:layout_marginStart="10dp"
                    android:text="Insert Weapon"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/judulregion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulweapon"
                    android:text="Nation :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulregion"
                    app:layout_constraintTop_toBottomOf="@id/tv_weapon"
                    android:layout_marginStart="10dp"
                    android:text="Insert Region"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/judulfaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulregion"
                    android:text="Affiliation :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_faction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulfaction"
                    app:layout_constraintTop_toBottomOf="@id/tv_region"
                    android:layout_marginStart="10dp"
                    android:text="Insert Faction"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/judulrarity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulfaction"
                    android:text="Rarity :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_rarity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulrarity"
                    app:layout_constraintTop_toBottomOf="@id/tv_faction"
                    android:layout_marginStart="10dp"
                    android:text="Insert Rarity"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/judulconstellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulrarity"
                    android:text="Constellation :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_constellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulconstellation"
                    app:layout_constraintTop_toBottomOf="@id/tv_rarity"
                    android:layout_marginStart="10dp"
                    android:text="Insert Constellation"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/judulbirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulconstellation"
                    android:text="Birthday :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/judulbirthday"
                    app:layout_constraintTop_toBottomOf="@id/tv_constellation"
                    android:layout_marginStart="10dp"
                    android:text="Insert Birthday"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/juduldesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulbirthday"
                    android:text="Description :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/juduldesc"
                    android:text="Insert Multiple Desc"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:id="@+id/judulTalents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc"
                    android:text="Talents :"
                    android:textSize="10sp"
                    android:fontFamily="@font/hoyo"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_Talents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/judulTalents"
                    card_view:itemCount="3"
                    android:layout_marginTop="10dp"
                    card_view:listitem="@layout/list_talents"
                    card_view:cardElevation="0dp"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logopaimonopedia"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/icon_detail_character"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>




    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
